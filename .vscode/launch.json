    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Dev server",
            "program": "${workspaceFolder}/adonis-todo/ace.js",
            "args": ["serve", "--hmr"],
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Tests",
            "program": "${workspaceFolder}/adonis-todo/ace.js",
            "args": ["test", "--watch"],
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Functional Tests",
            "program": "${workspaceFolder}/adonis-todo/ace.js",
            "args": ["test", "functional", "--watch"],
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}